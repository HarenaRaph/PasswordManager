<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:PasswordManager.Models"
             x:Class="PasswordManager.Views.LoginCredentialListPage">

    <Grid RowDefinitions="*, Auto" BackgroundColor="Black">
        <CollectionView VerticalOptions="Fill"
                        ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChange">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:LoginCredential">
                    <Grid ColumnDefinitions="*, Auto" Padding="20" Margin="10,5" BackgroundColor="DimGrey">
                        <Label Text="{Binding Website}" VerticalTextAlignment="Center" FontSize="Large" FontAttributes="Bold"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>

        <Button Grid.Row="1" Text="Ajouter un mot de passe" Clicked="OnItemAdd" Margin="20" FontSize="18" Padding="20" Background="NavajoWhite" FontAttributes="Bold"/>

    </Grid>

</ContentPage>
