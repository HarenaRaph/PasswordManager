<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:PasswordManager.Models"
             x:Class="PasswordManager.Views.LoginCredentialItemPage"
             x:DataType="models:LoginCredential"
             Title="{Binding Website}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="Black">
            <Label Text="Plateforme"/>
            <Entry Text="{Binding Website}"/>

            <Label Text="Nom d'utilisateur"/>
            <Entry Text="{Binding Username}"/>

            <Label Text="Mot de passe"/>
            <Entry Text="{Binding Password}" IsPassword="True" Focused="OnPasswordFocused" Unfocused="OnPasswordFocused"/>

            <Button Text="Enregistrer" Clicked="OnSaveClicked" BackgroundColor="white" FontAttributes="Bold" Margin="0,40,0,10"/>

            <Button Text="Annuler" Clicked="OnCancelClicked" BackgroundColor="FloralWhite" FontAttributes="Bold"/>

            <Button Text="Supprimer" BackgroundColor="MediumVioletRed" IsVisible="{Binding Id}" Clicked="OnDeletedClicked" TextColor="White" FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>